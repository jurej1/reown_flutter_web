{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "./typescript",
    "outDir": "./typescript/build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./typescript/**/*.ts"]
}
